#header
  height: 200px
  position: relative
  border-bottom: 1px solid rgba(170, 0, 0, .2)
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
#    background: linear-gradient(rgba(0, 0, 0, 0.2), transparent)
  &:after
    bottom: 0
#    background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: center color-background
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: rgb(170, 0, 0)
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

#logo img
  max-width: 100%
  width: 500px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: 0

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: color-link
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: unicons
  font-weight: normal
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 800
  letter-spacing: 1px
  @media mq-mobile
    display: none

.main-nav-link.home
  &:before
    content: "\ea3d"
    font-family: unicons
    font-size: 20px
    font-weight: normal
    margin-right: 4px

.main-nav-link.slide
  &:before
    content: "\eb10"
    font-family: unicons
    font-size: 20px
    font-weight: normal
    margin-right: 4px

#main-nav-toggle
  display: none
  &:before
    content: "\e990"
    font-size: 20px
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-top: -4px
  margin-right: -10px

#nav-github-link
  &:before
    font-family: font-icon
    font-size: 18px
    content: "\f09b"

#nav-twitter-link
  &:before
    font-family: font-icon
    font-size: 18px
    content: "\f099"

#nav-rss-link
  &:before
    font-size: 18px
    content: "\eb31"

#nav-search-btn
  &:before
    font-size: 18px
    content: "\eb41"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  font-weight: normal
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777
