#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption
  &:before
    font-family: font-icon
    font-weight: normal
    margin-right: 4px

.widget-title.authors
  &:before
    content: "\f2ba"

.widget-title.archive
  &:before
    content: "\f187"

.widget-title.category
  &:before
    content: "\f114"

.widget-title.recent
  &:before
    content: "\f017"

.widget-title.tag
  &:before
    content: "\f02c"

.widget-title.tagcloud
  &:before
    content: "\f0c2"

.widget
  color: color-sidebar-text
  text-shadow: 0 1px #fff
  background: color-widget-background
  box-shadow: 0 -1px 4px color-widget-border inset
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc