.widget-wrap
  margin-bottom: block-margin !important
  @media mq-normal
    column(main-column)

.widget-title
  color: #ccc
  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: .5em
  line-height: 1em
  font-weight: bold
  &:before
    font-family: unicons
    font-size: 20px
    font-weight: normal
    margin-right: 4px

.widget-title.authors
  &:before
    content: "\ec1a"

.widget-title.archive
  &:before
    content: "\e83a"

.widget-title.category
  &:before
    content: "\eaa3"

.widget-title.popular
  &:before
    content: "\ebae"

.widget-title.recent
  &:before
    content: "\ebb5"

.widget-title.tag
  &:before
    content: "\ebce"

.widget-title.tagcloud
  &:before
    content: "\e913"

.widget
  color: color-grey
  ul, ol
    li
      display: inline-block
      zoom:1
      *display:inline
      padding-right: .75em
