.widget-wrap
  margin-bottom: block-margin !important
  @media mq-normal
    column(main-column)

.widget-title
  color: #ccc
  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: .5em
  line-height: 1em
  font-weight: bold
  &:before
    font-family: font-icon
    font-weight: normal
    margin-right: 4px

.widget-title.archive
  &:before
    content: "\f187"

.widget-title.category
  &:before
    content: "\f114"

.widget-title.recent
  &:before
    content: "\f017"

.widget-title.tag
  &:before
    content: "\f02c"

.widget-title.tagcloud
  &:before
    content: "\f0c2"

.widget
  color: color-grey
  ul, ol
    li
      display: inline-block
      zoom:1
      *display:inline
      padding-right: .75em
